# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/human_in_loop
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/human_in_loop_test

# Redis Configuration (for Celery and caching)
REDIS_URL=redis://localhost:6379/0

# HuggingFace Configuration
HF_TOKEN=your_huggingface_token_here

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourcompany.com

# Security
SECRET_KEY=your-secret-key-for-jwt-and-sessions
ENCRYPTION_KEY=your-32-char-encryption-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Workflow Configuration
DEFAULT_APPROVAL_TIMEOUT=86400  # 24 hours in seconds
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2

# Monitoring
PROMETHEUS_PORT=8001
LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
STREAMLIT_PORT=8501